<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Todolist App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="icon" type="image/png" href="public/favicon.png" />
</head>

<body>
  <div class="container-fluid">
    <header class="page-header">
	     <h1>Welcome on Todolist App</h1>
    </header>

    <div class="row col-lg-6">
      <ul id="liste" class="well list-group">
          <% todolist.forEach(function(todo, index) { %>
            <li class="list-group-item"><a class="btn btn-warning btn-xs active" role="button"
               href="/supprimer/<%= index %>">âœ˜</a> <%= todo %></li>
          <% }); %>
      </ul>
    </div>

      <div class="row col-lg-5 col-lg-offset-1">
        <form action="/ajouter/" method="post" class="well">
          <input type="text" name="newtodo" id="newtodo" placeholder="Add an item" class="form-control input-lg" autofocus />
          </br>
          <input type="submit" value="Add" id="bouton" class="btn btn-primary btn-lg"/>
        </form>
      </div>

  </div>

    <script src="public/js/socket.io.js"></script>
    <script src="public/js/main.js"></script>
</body>

</html>
